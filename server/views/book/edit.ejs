<%-include ('../partials/header.ejs');%>
    <%-include ('../partials/main_nav.ejs');%>

        <!--content for the Add page-->
        <div class="container">
            <div class="row">

                    <h1>
                        <%= title %>
                    </h1>
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Book Title</label>
                            <input type="text" class="form-control" id="nameTextField"
                                placeholder="Enter the Book Title" name="name" value="<%=book.name%>" required>
                        </div>

                        <div class="form-group">
                            <label for="authorTextField">Author</label>
                            <input type="text" class="form-control" id="authorTextField"
                                placeholder="Enter the Book's Author" name="author" value="<%=book.author%>" required>
                        </div>

                        <div class="form-group">
                            <label for="publishedTextField">Year</label>
                            <input type="text" class="form-control" id="publishedTextField"
                                placeholder="Enter the year of publication" name="published" value="<%=book.published%>"
                                required>
                        </div>

                        <div class="form-group">
                            <label for="descriptionTextArea">Description</label>
                            <textarea type="text" class="form-control" id="descriptionTextArea" rows="5" cols="50"
                                placeholder="Enter a brief description of the book" name="description"
                                required><%=book.description%></textarea>
                        </div>

                        <div class="form-group">
                            <label for="ratingTextField">Ratings</label>
                            <input type="number" class="form-control" id="ratingTextField"
                                placeholder="Enter rating" name="rating" value="<%=book.rating%>"
                                required>
                        </div>

                        <div class="form-group">
                            <label for="PriceTextField">Price</label>
                            <input type="number" class="form-control" id="priceTextField"
                                placeholder="Enter the Book's price" name="price" value="<%=book.price%>" required>
                        </div>

                        <div class="form-group">
                            <label for="commentsTextArea">Comments</label>
                            <textarea type="text" class="form-control" id="commentsTextArea" rows="5" cols="50"
                                placeholder="Comments" name="comments"
                                ><%=book.comments%></textarea>
                        </div>

                        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>submit</button>
                        <a href='/bookList' class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>

                    </form>

            </div>
        </div>



        <%- include('../partials/bottom_nav'); -%>
            <%- include('../partials/footer'); -%>
